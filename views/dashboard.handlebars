<main>
  <section>
    <h2>Your Posts</h2>
    {{#if posts.length}}
      {{#each posts}}
        <article>
          <h3>{{this.title}}</h3>
          <p>{{this.content}}</p>
          <button class="delete-post" data-id="{{this.id}}">Delete</button>
        </article>
      {{/each}}
    {{else}}
      <p>No posts yet. Start writing your first post!</p>
    {{/if}}
  </section>

  <section>
    <h2>Create a New Post</h2>
    <form id="new-post-form">
      <input type="text" id="post-title" name="title" placeholder="Post Title" required>
      <textarea id="post-content" name="content" rows="4" placeholder="Write your post here..." required></textarea>
      <button type="submit">Create</button>
    </form>
  </section>
</main>

<script src="/js/dashboard.js"></script>
